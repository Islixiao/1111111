<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.ilearn.activity.MainActivity">
<!--该xml 布局就是渲染指定activity-->

    <TextView
        android:id="@+id/main_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="欢迎使用AI学习"
        android:textColor="@color/text_topbar"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:gravity="center"
        android:text="请选择用户类型"
        android:textSize="22dp"
        android:textColor="@color/text_topbar"/>




    <!--将图片设置为圆形-->
    <com.example.pc.ilearn.tools.RoundImageView
        android:id="@+id/main_activity_admin_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/teacher"
        />


    <Button
        android:id="@+id/main_activity_teacher"
        style="@style/common_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_activity_admin_pic"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/main_activity_admin_pic"
        android:text="老师" />

    <com.example.pc.ilearn.tools.RoundImageView
        android:id="@+id/main_activity_student_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/main_activity_admin_pic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/student" />


    <Button
        android:id="@+id/main_activity_student"
        style="@style/common_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_teacher"
        android:layout_alignBottom="@+id/main_activity_student_pic"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/main_activity_student_pic"
        android:text="学生" />


    <!--将图片设置为圆形-->
    <com.example.pc.ilearn.tools.RoundImageView
        android:id="@+id/main_activity_admi_pic"
        android:layout_width="57dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/main_activity_student_pic"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/admin" />


    <Button
        android:id="@+id/main_activity_admin"
        style="@style/common_button_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/main_activity_student"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/main_activity_admi_pic"
        android:text="管理员" />
</RelativeLayout>
