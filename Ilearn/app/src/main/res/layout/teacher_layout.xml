<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ka"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <!-- 管理员管理界面-->


    <TextView
        android:id="@+id/tv1"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎使用I学习App"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="10dp"
        android:text="老师您好"
        android:layout_marginLeft="25dp"
        android:textSize="20dp" />

    <com.example.pc.ilearn.tools.RoundImageView
        android:id="@+id/pic"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/tv1"
        android:layout_marginRight="10dp"
        android:src="@drawable/teacher"
        />

    <Button
        style="@style/common_button_style"
        android:id="@+id/Tea_activity_select"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:text="个人信息"/>


    <Button
        style="@style/common_button_style"
        android:id="@+id/Tea_activity_time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/Tea_activity_select"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:text="学生时间信息"/>


    <TextView
        android:id="@+id/admin_activity_forceOffline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="强制下线"
        android:textColor="@color/vertical_sep_color"/>


</RelativeLayout>